# ===========================================
# Upwork Job Scraper - Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values

# -------------------------------------------
# SCRAPING SETTINGS
# -------------------------------------------
UPWORK_SEARCH_QUERY="Python Developer"
MAX_PAGES=5
OUTPUT_PATH="./output"

# -------------------------------------------
# PROXY SETTINGS (Optional)
# Leave empty to run without proxy
# -------------------------------------------
PROXY_URL=
# Example: PROXY_URL=http://user:pass@proxy.example.com:8080

# -------------------------------------------
# FILTER SETTINGS
# -------------------------------------------
# Budget range (leave empty for no filter)
MIN_BUDGET=
MAX_BUDGET=

# Required skills (comma-separated, leave empty for no filter)
REQUIRED_SKILLS=

# Keywords to include in job title/description (comma-separated)
INCLUDE_KEYWORDS=

# Keywords to exclude from job title/description (comma-separated)
EXCLUDE_KEYWORDS=

# Maximum job age in hours (leave empty for no filter)
MAX_AGE_HOURS=

# Minimum skill match count (how many required skills must match)
MIN_SKILL_MATCH=1

# -------------------------------------------
# AI / LANGCHAIN SETTINGS
# -------------------------------------------
# Choose your AI provider: "gemini" or "openai"
AI_PROVIDER=gemini

# Google Gemini API Key (get from https://aistudio.google.com/apikey)
GEMINI_API_KEY=your-gemini-api-key-here

# OpenAI API Key (only needed if AI_PROVIDER=openai)
OPENAI_API_KEY=

# LLM Model to use
# For Gemini: gemini-1.5-flash, gemini-1.5-pro, gemini-2.0-flash-exp
# For OpenAI: gpt-4o-mini, gpt-4o, gpt-4-turbo
LLM_MODEL=gemini-1.5-flash

# Path to your profile.yaml
PROFILE_PATH=./profile.yaml

# -------------------------------------------
# LOGGING
# -------------------------------------------
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

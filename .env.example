# ===========================================
# Upwork Job Scraper - Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values

# -------------------------------------------
# SCRAPING SETTINGS
# -------------------------------------------
UPWORK_SEARCH_QUERY="Python Developer"
MAX_PAGES=5
OUTPUT_PATH="./output"

# -------------------------------------------
# PROXY SETTINGS (Optional)
# Leave empty to run without proxy
# -------------------------------------------
PROXY_URL=
# Example: PROXY_URL=http://user:pass@proxy.example.com:8080

# -------------------------------------------
# FILTER SETTINGS
# -------------------------------------------
# Budget range (leave empty for no filter)
MIN_BUDGET=
MAX_BUDGET=

# Required skills (comma-separated, leave empty for no filter)
REQUIRED_SKILLS=

# Keywords to include in job title/description (comma-separated)
INCLUDE_KEYWORDS=

# Keywords to exclude from job title/description (comma-separated)
EXCLUDE_KEYWORDS=

# Maximum job age in hours (leave empty for no filter)
MAX_AGE_HOURS=

# Minimum skill match count (how many required skills must match)
MIN_SKILL_MATCH=1

# -------------------------------------------
# AI / LANGCHAIN SETTINGS
# -------------------------------------------
OPENAI_API_KEY=your-openai-api-key-here
LLM_MODEL=gpt-4o-mini
PROFILE_PATH=./profile.yaml

# -------------------------------------------
# LOGGING
# -------------------------------------------
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
